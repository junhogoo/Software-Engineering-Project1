<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <Button
        android:id="@+id/search_detail_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:background="#123456"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/search_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="35dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff0f0">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="솔랭"
            android:textSize="20dp"
            android:textColor="#000000"/>
            <TextView
                android:id="@+id/search_detail_ranktier1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티어"
                android:textSize="25dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몇승 몇패 승률"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자유 5:5 랭크"
            android:textSize="20dp"
            android:textColor="#000000"/>
            <TextView
                android:id="@+id/search_detail_ranktier2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티어"
                android:textSize="25dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몇승 몇패 승률"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="패"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:background="#ff0000"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="킬/뎃/어시"
                android:background="#ffffff"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="승"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:background="#0000ff"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="킬/뎃/어시"
                android:background="#ffffff"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>





</LinearLayout>